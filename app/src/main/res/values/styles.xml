<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Kwic" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Kwic.title" parent="Kwic">
        <item name="android:textSize">16sp</item>
        <!--        <item name="android:textStyle">bold</item>-->
        <item name="android:alpha">0.87</item>
        <item name="android:maxLines">1</item>

    </style>

    <style name="Kwic.subtitle" parent="Kwic.title">
        <item name="android:textSize">14sp</item>
        <!--        <item name="android:textStyle">normal</item>-->
        <item name="android:alpha">0.6</item>
    </style>

    <style name="Kwic.name" parent="Kwic">
        <!--        <item name="android:textStyle">bold</item>-->
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="Kwic.description" parent="Kwic.name">
        <!--        <item name="android:textStyle">normal</item>-->
        <item name="android:alpha">0.6</item>
    </style>

    <style name="Kwic.Divider" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_size</item>
        <item name="android:background">@color/divider</item>
    </style>

</resources>
