<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<!--    tools:context=".ui.main.FragmentMain"-->

    <TextView
        android:id="@+id/detail_title"
        style="@style/Kwic.header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Ray's YouTube Playlists"
        />

<!--    // todo remove android:name-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_list"
        android:name="com.numerad.numeriq.ItemFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/detail_title"
        app:layout_constraintStart_toStartOf="parent"
        tools:context=".ArticleListFragment"
        tools:listitem="@layout/playlist"
        tools:itemCount="3"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
